---
import Layout from '../layouts/Layout.astro';
import FiltrosCartas from '../components/FiltrosCartas.svelte?client';
import Header from '../components/Header';
import { getCollection } from 'astro:content';
import "../styles/global.css";

const todasLasCartas = await getCollection('pokemonCards');
---

<Layout>
  <div class="relative min-h-screen flex flex-col">
    <Header cartCount={3} />

    <main class="pt-24 flex flex-wrap items-start gap-4 justify-center">
      <div>
        <FiltrosCartas client:load cartas={todasLasCartas} />
      </div>
    </main>
  </div>
</Layout>
